---
deployment:
  tasks:
    - export DEPLOYPATH=/home/user/public_html/api.chat
    - /bin/cp -R public $DEPLOYPATH
    - /bin/cp -R src $DEPLOYPATH
    - /bin/cp .env $DEPLOYPATH
    - /bin/cp .htaccess $DEPLOYPATH
    - /bin/cp composer.json $DEPLOYPATH
    - /bin/cp newkey $DEPLOYPATH
    - /bin/cp run $DEPLOYPATH
    - /bin/cp user $DEPLOYPATH